
@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>


<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Add", "Add", "Home", null, new { @class = "btn btn-primary" })
    </div>
</div>

 @await Html.PartialAsync("_UserTableList")



@section Scripts {

      <script>
            $(document).ready(function () {
                $(".delete-user").click(function () {
                    var userId = $(this).data("user-id");

                    $.ajax({
                        url: "/Home/Delete/" + userId,
                        type: "GET",
                        success: function (data) { 
                          $("body").append(data);
                          $("#idelete").modal("show");
                        },
                        error: function () {
                            console.log("Error fetching partial view");
                        }
                    });
                });
            });
    </script>

}


